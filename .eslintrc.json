{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint-config-react"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "require":"readonly",
        "process":"readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "space-infix-ops":"error",
        "key-spacing":"error",
        "space-before-blocks":"warn",
        "max-len":"off",
        "no-use-before-define":"off",
        "no-unused-vars":"off"
    }
}